---

- hosts: all
  remote_user: vagrant
  sudo: yes
  sudo_user: root
  vars_files:
    - ~/.ansible/github_vars.yml
    
  tasks:
    - apt: update_cache=yes
    - name: install basic packages that should be on all nodes
      action: apt pkg={{item}} state=installed
      with_items:
       - joe
       - tcpdump
       - tshark
       - wget
       - git
       - vim
       - locate
    
- include: dev.yml
- include: test.yml
- include: db.yml


